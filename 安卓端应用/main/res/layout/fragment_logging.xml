<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alice v1.0.0 - 发布日志 (2025-03-03)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是 Alice App 的第一个正式版本"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/new_features_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="功能："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/new_features_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 实现了AI对话、日程提醒、网页浏览等功能。"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/improvements_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="改进："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/improvements_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 优化了加载速度和页面展示。"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/fixes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修复："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/fixes_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 修复了历史记录导入和量化历史导致的闪退和卡顿。"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/known_issues_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已知问题："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/known_issues_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 闹铃可能无法响应\n• 去除了未完善的AI工具调用\n• 填写配置后无响应可尝试退出重进\n• 如遇bug，不要惊慌，拿起手边趁手的东西照着它狠狠拍下"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</layout>